{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
      {
        "essential": false,
        "image": "postgres:alpine",
        "memory": 128,
        "name": "db"
      },
      {
        "command": [
          "/bin/sh",
          "-c",
          "python manage.py migrate && gunicorn izu.wsgi:application --bind 0.0.0.0:8009  && python manage.py collectstatic"
        ],
        "essential": false,
        "memory": 128,
        "image": "texplode/izu-app",
        "name": "web"
      },
      {
        "essential": true,
        "image": "texplode/trivia-nginx",
        "memory": 256,
        "links": ["web"],
        "name": "nginx",
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80
          }
        ]
      },
      {
        "essential": false,
        "image":"texplode/esusu_smtp",
        "name": "smtp",
        "memory": 128,
        "portMappings": [
            {
                "containerPort": 25,
                "hostPort": 25
            }
        ]
    }
    ]
  }
  