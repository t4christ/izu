{
  "AWSEBDockerrunVersion": 2,
      "containerDefinitions": [
          {
              "command": [
                  "/bin/sh",
                  "-c",
                  "python manage.py migrate && gunicorn izu.wsgi:application --bind 0.0.0.0:8000 && python manage.py collectstatic "
              ],
              "essential": false,
              "image":"texplode/izu_web_app",
              "links":["smtp"],
              "memory": 128,
              "name": "web_app"
              
          },
          {
              "essential": false,
              "image": "postgres:alpine",
              "memory": 128,
              "name": "db"
          },
          {
              "essential": true,
              "image":"texplode/izu_nginx",
              "memory": 256,
              "links":["web_app"],
              "name": "nginx",
              "portMappings": [
                  {
                      "containerPort": 80,
                      "hostPort": 80
                  }
              ]
          },

          {
              "essential": false,
              "image":"texplode/esusu_smtp",
              "name": "smtp",
              "memory": 128,
              "portMappings": [
                  {
                      "containerPort": 25,
                      "hostPort": 25
                  }
              ]
          }
      ]
  }


